<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.dscfgos.summonerstats.fragments.LeagueFragment">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/waiting_layout"  android:id="@+id/waiting" android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcyLeague"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/league_card"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35">

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
